<!-- home page -->
<div class="author">
    <h1 class="author-heading">Hi, I am Lotus Bomb</h1>
    <p class="author-body">Web Developer and Lifestyle Writer</p>
</div>

<img src="/img/post.jpg" class="hero-image" width="981px" height="528px">

<section class="articles">
    <h2 class="articles-heading">Latest Post</h2>
    <ul class="article-ul">

        <% data.forEach(post => { %>
        <li>
            <a href= "/post/<%= post.id %>">
            <span><%= post.title %></span>
            <span class="article-list-date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
</section>
